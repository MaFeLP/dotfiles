# Maintainer: MaFeLP <mafelp@proton.me>
pkgname='neovim-config'
pkgver='1.0.9'
pkgrel='1'
pkgdesc='My personal neovim configurations'
arch=('any')
url='https://github.com/mafelp/dotfiles'
license=('GPL3')
depends=(
  'curl'  # For Grammar Checking with LanguageTool
  'neovim'
  'python-pynvim'
  'nvim-packer-git'
  'tree-sitter'
  'wl-clipboard'

  # Language Servers
  'bash-language-server'
  'clang'
  'dart'
  'deno'
  'gopls'
  'lua-language-server'
  'pyright'
  'rust-analyzer'
  'texlab'
  'vscode-css-languageserver'
  'vscode-html-languageserver'
  'vscode-json-languageserver'
  'qt6-declarative'
  'yaml-language-server'

  # Language Servers from AUR
  'cmake-language-server'
  'dockerfile-language-server'
  'java-language-server'
  'sql-language-server'
  
  # Other additional dependencies for language Servers
  'shellcheck'
  'qt6-languageserver'
)
makedepends=('fd')
source=("files.tar.gz")
sha256sums=("888b3c15c1ee81341de7214c5b488df8e111b654efce7b7a33629b027a4bea57")
install="${pkgname}.install"

package() {
  cd "${srcdir}/files"

  for f in $(fd --extension=.lua);do
    install -Dm644 "$f" "${pkgdir}/usr/share/neovim-config/$f"
  done
}
